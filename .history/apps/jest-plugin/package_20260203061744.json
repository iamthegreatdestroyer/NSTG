{
  "name": "@nstg/jest-plugin",
  "version": "0.0.0",
  "private": true,
  "description": "Jest plugin for NSTG integration",
  "license": "AGPL-3.0-or-later",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@nstg/core": "workspace:*",
    "@nstg/shared": "workspace:*"
  },
  "devDependencies": {
    "@nstg/config-eslint": "workspace:*",
    "@nstg/config-typescript": "workspace:*",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "jest": "^29.0.0"
  }
}
